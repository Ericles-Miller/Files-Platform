generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Files {
  id           String   @id @default(uuid())
  displayName  String   @unique
  displayCover String
  size         Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
  type         String
  folderPath   String
  user         Users    @relation(fields: [userId], references: [id])
  userId       String
  folderId     String
  folder       Folders  @relation(fields: [folderId], references: [id])

  @@map("files")
}

model Users {
  id            String          @id @default(uuid())
  name          String
  email         String
  password      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime?       @default(now())
  enable        Boolean         @default(true)
  avatar        String?
  fileName      String?
  files         Files[]
  refreshTokens RefreshTokens[]
  folders       Folders[]

  @@map("users")
}

model Folders {
  id          String    @id @default(uuid())
  displayName String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @default(now())
  size        Float?
  path        String    @unique

  user     Users      @relation(fields: [userId], references: [id])
  userId   String
  files    Files[]
  children Children[]

  @@map("folders")
}

model Children {
  id String @id @default(uuid())

  folder    Folders?  @relation(fields: [folderId], references: [id])
  folderId  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @default(now())

  @@map("children")
}

model RefreshTokens {
  id        String @id @default(uuid())
  expiresIn Int
  user      Users  @relation(fields: [userId], references: [id])
  userId    String

  @@map("refreshTokens")
}
