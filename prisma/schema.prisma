generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Files {
  id           String     @id @default(uuid())
  displayName  String     @unique
  displayCover String
  createdAt    DateTime   @default(now())
  updateAt     DateTime?  @default(now())
  description  String
  Comments     Comments[]

  @@map("posts")
}

model Users {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @default(now())
  enable    Boolean
  avatar    String?

  @@map("users")
}

model Comments {
  id          String @id @default(uuid())
  description String
  files       Files  @relation(fields: [postsId], references: [id])
  postsId     String
}
